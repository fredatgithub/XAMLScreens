<UserControl x:Class="XAMLScreens.Usercontrols.ConfigView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:XAMLScreens.Usercontrols"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Auto">
            <StackPanel VerticalAlignment="Center" Orientation="Horizontal" Margin="64,0,0,100">
                <Button Tag="/Icons/Farmacos.png" Content="FARMACOS" Style="{StaticResource ConfigButtonStyle}"/>
                <Button Tag="/Icons/Dosis.png" Content="DOSIS" Style="{StaticResource ConfigButtonStyle}"/>
                <Button Tag="/Icons/Colores.png" Content="COLORES" Style="{StaticResource ConfigButtonStyle}"/>
                <Button Tag="/Icons/Altertas.png" Content="ALERTS" Style="{StaticResource ConfigButtonStyle}"/>
                <Button Tag="/Icons/STOCK MÍNIMO.png" Content="STOCK MINIMO Y PEDIDOS" Style="{StaticResource ConfigButtonStyle}" Padding="0,0,0,0"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
